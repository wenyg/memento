{
  "name": "memento",
  "displayName": "memento",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memento.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "memento.listMdFiles",
        "title": "List Markdown Files by Creation Time"
      },
      {
        "command": "memento.refreshMdFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.refreshTagFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.switchToFileView",
        "title": "Files by Time",
        "icon": "$(clock)"
      },
      {
        "command": "memento.switchToTagView",
        "title": "Files by Tags",
        "icon": "$(tag)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memento-explorer",
          "title": "Memento",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "memento-explorer": [
        {
          "id": "mementoMainView",
          "name": "Markdown Files",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "memento.switchToFileView",
          "when": "view == mementoMainView",
          "group": "navigation@1"
        },
        {
          "command": "memento.switchToTagView",
          "when": "view == mementoMainView",
          "group": "navigation@2"
        },
        {
          "command": "memento.refreshMdFiles",
          "when": "view == mementoMainView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Memento",
      "properties": {
        "memento.excludeFolders": {
          "type": "array",
          "default": ["node_modules", ".git"],
          "description": "要排除的文件夹列表（支持通配符，如 'temp*'）",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
