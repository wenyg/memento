{
  "name": "memento",
  "displayName": "memento",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memento.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "memento.listMdFiles",
        "title": "List Markdown Files by Creation Time"
      },
      {
        "command": "memento.refreshMdFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.refreshTagFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.switchToFileView",
        "title": "Files by Time",
        "icon": "$(clock)"
      },
      {
        "command": "memento.switchToTagView",
        "title": "Files by Tags",
        "icon": "$(tag)"
      },
      {
        "command": "memento.switchToCalendarView",
        "title": "Calendar",
        "icon": "$(calendar)"
      },
      {
        "command": "memento.revealInExplorer",
        "title": "在资源管理器中显示"
      },
      {
        "command": "memento.fillFrontMatterDate",
        "title": "Memento: 填充 Front Matter Date 字段"
      },
      {
        "command": "memento.openDailyNote",
        "title": "Memento: 打开今天的日记"
      },
      {
        "command": "memento.openWeeklyNote",
        "title": "Memento: 打开本周的周报"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memento-explorer",
          "title": "Memento",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "memento-explorer": [
        {
          "id": "mementoMainView",
          "name": "Markdown Files",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "memento.switchToFileView",
          "when": "view == mementoMainView",
          "group": "navigation@1"
        },
        {
          "command": "memento.switchToTagView",
          "when": "view == mementoMainView",
          "group": "navigation@2"
        },
        {
          "command": "memento.switchToCalendarView",
          "when": "view == mementoMainView",
          "group": "navigation@3"
        },
        {
          "command": "memento.refreshMdFiles",
          "when": "view == mementoMainView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "memento.revealInExplorer",
          "when": "view == mementoMainView && viewItem == mdFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Memento",
      "properties": {
        "memento.notesPath": {
          "type": "string",
          "default": "",
          "description": "笔记根目录的绝对路径（留空则使用当前工作区）"
        },
        "memento.excludeFolders": {
          "type": "array",
          "default": ["node_modules", ".git"],
          "description": "要排除的文件夹列表（支持通配符，如 'temp*'）",
          "items": {
            "type": "string"
          }
        },
        "memento.dailyNotesPath": {
          "type": "string",
          "default": "",
          "description": "日记存储目录的绝对路径（留空则使用笔记根目录下的 daily 文件夹）"
        },
        "memento.dailyNoteTemplate": {
          "type": "string",
          "default": "---\ndate: {{date}}\ntitle: {{title}}\ntags: [daily]\n---\n\n# {{title}}\n\n",
          "description": "日记模板，支持变量：{{date}}, {{title}}, {{year}}, {{month}}, {{day}}"
        },
        "memento.weeklyNotesPath": {
          "type": "string",
          "default": "",
          "description": "周报存储目录的绝对路径（留空则使用笔记根目录下的 weekly 文件夹）"
        },
        "memento.weeklyNoteTemplate": {
          "type": "string",
          "default": "---\ndate: {{date}}\ntitle: {{title}}\ntags: [weekly]\n---\n\n# {{title}}\n\n## 本周总结\n\n## 下周计划\n\n",
          "description": "周报模板，支持变量：{{date}}, {{title}}, {{year}}, {{week}}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
