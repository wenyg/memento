{
  "name": "memento",
  "displayName": "Memento",
  "description": "轻量级 Markdown 笔记管理插件，支持多视图、标签分类、日记周报和 Front Matter",
  "version": "0.0.1",
  "publisher": "wenyg",
  "repository": {
    "type": "git",
    "url": "https://github.com/wenyg/memento"
  },
  "keywords": [
    "markdown",
    "notes",
    "notebook",
    "tags",
    "daily notes",
    "journal",
    "front matter",
    "笔记",
    "日记"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memento.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "memento.listMdFiles",
        "title": "List Markdown Files by Creation Time"
      },
      {
        "command": "memento.refreshMdFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.refreshTagFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "memento.switchToFileView",
        "title": "Files by Time",
        "icon": "$(clock)"
      },
      {
        "command": "memento.switchToTagView",
        "title": "Files by Tags",
        "icon": "$(tag)"
      },
      {
        "command": "memento.switchToCalendarView",
        "title": "Calendar",
        "icon": "$(calendar)"
      },
      {
        "command": "memento.switchToSettingsView",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "memento.revealInExplorer",
        "title": "在资源管理器中显示"
      },
      {
        "command": "memento.executeSettingAction",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "memento.fillFrontMatterDate",
        "title": "Memento: 填充 Front Matter Date 字段"
      },
      {
        "command": "memento.openDailyNote",
        "title": "Memento: 打开今天的日记"
      },
      {
        "command": "memento.openWeeklyNote",
        "title": "Memento: 打开本周的周报"
      },
      {
        "command": "memento.openSettings",
        "title": "Memento: 打开设置"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memento-explorer",
          "title": "Memento",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "memento-explorer": [
        {
          "id": "mementoMainView",
          "name": "Markdown Files",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "memento.switchToFileView",
          "when": "view == mementoMainView",
          "group": "navigation@1"
        },
        {
          "command": "memento.switchToTagView",
          "when": "view == mementoMainView",
          "group": "navigation@2"
        },
        {
          "command": "memento.switchToCalendarView",
          "when": "view == mementoMainView",
          "group": "navigation@3"
        },
        {
          "command": "memento.switchToSettingsView",
          "when": "view == mementoMainView",
          "group": "navigation@4"
        },
        {
          "command": "memento.refreshMdFiles",
          "when": "view == mementoMainView",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "memento.revealInExplorer",
          "when": "view == mementoMainView && viewItem == mdFile",
          "group": "navigation"
        },
        {
          "command": "memento.executeSettingAction",
          "when": "view == mementoMainView && viewItem == calendarAction",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Memento",
      "properties": {
        "memento.notesPath": {
          "type": "string",
          "default": "",
          "description": "笔记根目录的绝对路径（留空则使用当前工作区）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
